<TopBar>:
    size_hint_y: 0.15
    canvas:
        Color:
            rgba: (0, 1, 1, 1)
        Rectangle:
            size: self.size
            pos: self.pos
<PictureBox>:
    canvas.before:
        Color:
            rgba: (0, 1, 0, 1)
        Rectangle:
            size: self.size
            pos: self.pos
<SeriesBox>:
    size_hint_y: 0.25
    canvas:
        Color:
            rgba: (0, 0, 1, 1)
        Rectangle:
            size: self.size
            pos: self.pos
<ActionBox>:
    size_hint_y: 0.25
    canvas:
        Color:
            rgba: (1, 0, 1, 1)
        Rectangle:
            size: self.size
            pos: self.pos

<Parameters>:
    size_hint_y: 0.5
    pos: (0,root.size[1]-int(root.size[1]*0.18))
    BoxLayout:
        canvas:
            Color:
                rgba: (1, 0.5, 1, 0.5)
            Rectangle:
                size: self.size
                pos: self.pos
        orientation: 'vertical'
        Slider:
        Slider:

<TrainingLayout>:
    orientation: 'vertical'
    TopBar:
        id: topbar
        Label:
            text: "Etirement"
            font_size: self.height
            halign: 'center'
            valign: 'middle'
        Button:
            text: 'Setting'
            width: self.height
            size_hint_x: None
            on_press: root.show_parameters()
    PictureBox:
        id:pictureBox
        Image:
            id:stretchImage
            source: self.source
    SeriesBox:
    ActionBox:
        Button:
            id: startButton
            text: 'START' if root.isPause else 'PAUSE'
            width: self.height
            size_hint_x: None
            on_press: root.start_stretching()